{
  "name": "crypto-payments",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "description": "Crypto payment processor - accepts USDT/USDC on Base, Ethereum, TON, and Solana",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "vitest run",
    "test:e2e": "playwright test",
    "predeploy:edge": "rm -rf supabase/functions/crypto-payments/src && cp -r src supabase/functions/crypto-payments/src",
    "deploy:edge": "supabase functions deploy crypto-payments --no-verify-jwt"
  },
  "dependencies": {
    "@hono/node-server": "^1.14.1",
    "@supabase/supabase-js": "^2.49.1",
    "dotenv": "^16.5.0",
    "hono": "^4.7.6",
    "viem": "^2.23.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@solana/web3.js": "^1.98.4",
    "@ton/crypto": "^3.3.0",
    "@ton/ton": "^16.2.2",
    "@types/node": "^22.13.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^3.0.4"
  }
}
